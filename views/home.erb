            <img class="featurette-image img-circle pull-right box" data-src="holder.js/270x270" alt="270x270" style="width: 270px;" src="/colder1.jpg">
        
        
            <img class="featurette-image img-circle pull-left box" data-src="holder.js/270x270" alt="270x270" style="width: 270px;" src="/hotter1.jpg">
        
        
