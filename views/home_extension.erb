                  <option>Today</option>
                  <option>Tomorrow</option>
                </select>
              </div>
                    <br><br>
                <table class="table-box">
                  <tr>
                    <td><button type="button submit" name="submit" value="temperature-button" class="btn btn-warning dropdown_font" id="hotter">    Hotter or colder?</button></td>
                                   
                    <td><button type="button submit" name="submit" value="rainfall-button" class="btn btn-info dropdown_font" id="rain">   Wetter or drier?</button></td>
                  </tr>
                                   
                  <tr>
                    <td><button type="button submit" name="submit" value="cloud-button" class="btn btn-default dropdown_font" id="cloud">    Cloudier or clearer?</button></td>
                                   
                    <td><button type="button submit" name="submit" value="wind-button" class="btn btn-success dropdown_font" id="wind">    Windier or stiller?</button></td>
                  <tr>
                 </table> 
                </form>
